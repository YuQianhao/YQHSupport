<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialog_select_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#898989"
        android:minHeight="55dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/dialog_select_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#aac6c6c6"
        android:text="" />

    <ScrollView
        android:id="@+id/dialog_select_scroll"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/dialog_select_title"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/dialog_select_layout"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="150dp"
            android:divider="@drawable/linearlayout_split"
            android:showDividers="middle">


        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scrollView2"
        android:background="#aac6c6c6" />

    <TextView
        android:id="@+id/dialog_select_exit"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView19"
        android:gravity="center"
        android:background="@drawable/default_rectbutton"
        android:text="取消"
        android:textColor="#e34742"
        android:textSize="14sp" />


</LinearLayout>