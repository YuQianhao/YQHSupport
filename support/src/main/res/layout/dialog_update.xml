<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/basisdialog_background"
    android:paddingTop="20dp"
    android:layout_height="match_parent">

    <TextView
        android:text="有新版本发布"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="1dp"
        android:textColor="#ff000000"
        android:textSize="17sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:id="@+id/updatedialog_title" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="新的版本"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/updatedialog_versionnmame"
            android:layout_width="wrap_content"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="15sp"
            android:text="Alpha0.0.1"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="发布时间"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/updatedialog_date"
            android:layout_width="wrap_content"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="15sp"
            android:text="2018-08-06"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:textSize="13sp"
        android:gravity="center|left"
        android:text="新功能"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/updatedialog_updatemsg"
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="#000000"
        android:text="更新日志"
        android:textSize="15sp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/updatedialog_progress_layout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:background="#eaeaea"
            android:layout_height="1dp" />

        <ProgressBar
            android:id="@+id/updatedialog_progress_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:background="#eaeaea"
            android:layout_height="1dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/updatedialog_noupdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:background="#eaeaea"
            android:layout_height="1dp" />

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="14sp"
            android:text="暂不更新"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content" />
    </LinearLayout>



    <TextView
        android:id="@+id/updatedialog_update"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="16sp"
        android:text="立即更新"
        android:textColor="#ff037BFF"
        android:background="@drawable/basisdialog_buttondefault"
        android:layout_height="50dp" />



</LinearLayout>