<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/basisdialog_background"
    android:paddingTop="20dp"
    android:layout_height="match_parent">

    <TextView
        android:text="BasisDialogTitle"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="1dp"
        android:textColor="#ff000000"
        android:textSize="17sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:id="@+id/basisdialog_title" />

    <TextView
        android:text="ContextMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center"
        android:layout_marginTop="1dp"
        android:textSize="14sp"
        android:textColor="#ff000000"
        android:id="@+id/basisdialog_context" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:id="@+id/basisdialog_lineralayout"></LinearLayout>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffc6c6c6"
        android:id="@+id/textView31" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#ff000000"
            android:background="@drawable/basisdialog_buttondefault"
            android:id="@+id/basisdialog_buttonleft"
            android:layout_weight="100" />

        <TextView
            android:text=""
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/basisdialog_lefttext"
            android:background="#ffc6c6c6"
            android:layout_weight="1" />

        <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:textSize="15sp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#ff000000"
            android:background="@drawable/basisdialog_buttondefault"
            android:id="@+id/basisdialog_buttonmiddle"
            android:layout_weight="100" />

        <TextView
            android:text=""
            android:background="#ffc6c6c6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/basisdialog_middletext"
            android:layout_weight="1" />

        <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#ff000000"
            android:background="@drawable/basisdialog_buttondefault"
            android:id="@+id/basisdialog_buttonright"
            android:layout_weight="100" />
    </LinearLayout>

</LinearLayout>